// schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Member {
  id        String       @id @default(uuid())
  name      String
  email     String?      @unique
  metadata  Json?
  type      MemberType
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  chats     ChatMember[]
  messages  Message[]
}

enum MemberType {
  USER
  PROGRAM
}

model Chat {
  id         String       @id @default(uuid())
  name       String?
  context    String?
  conclusion String?
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  members    ChatMember[]
  messages   Message[]
}

model ChatMember {
  id       String   @id @default(uuid())
  memberId String
  chatId   String
  joinedAt DateTime @default(now())
  member   Member   @relation(fields: [memberId], references: [id])
  chat     Chat     @relation(fields: [chatId], references: [id])

  @@unique([memberId, chatId])
}

model Message {
  id        String   @id @default(uuid())
  content   Json
  senderId  String
  chatId    String
  createdAt DateTime @default(now())
  sender    Member   @relation(fields: [senderId], references: [id])
  chat      Chat     @relation(fields: [chatId], references: [id])

  @@index([chatId])
}
